<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorE"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:drawableLeft="@drawable/user"
                    android:gravity="left|center"
                    android:text="Customer Details"
                    android:textColor="@color/colorF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/dialIcon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_call_white_icon_foreground" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    android:backgroundTint="@color/colorE"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="CUSTOMER NAME"
                                android:textColor="@color/colorF"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/customername"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:text="CUSTOMER NAME"
                                android:textSize="10sp"
                                android:paddingLeft="5dp"
                                android:textColor="@color/colorF"
                                android:textStyle="bold" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="ADDRESS"
                                android:textColor="@color/colorF"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/address"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:text="ADDRESS"
                                android:textColor="@color/colorF"
                                android:textSize="10sp"
                                android:paddingLeft="5dp"
                                android:textStyle="bold" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="GTM"
                                android:textColor="@color/colorF"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/gtm"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:text="GTM"
                                android:textSize="10sp"
                                android:paddingLeft="5dp"
                                android:textColor="@color/colorF"
                                android:textStyle="bold" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="SALESPERSON"
                                android:textColor="@color/colorF"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/salesperson"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:text="SALESPERSON"
                                android:textColor="@color/colorF"
                                android:textSize="10sp"
                                android:paddingLeft="5dp"
                                android:textStyle="bold" />

                        </TableRow>

                    </TableLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/version2_datarecordlist"
                        android:gravity="left|center"
                        android:text="Other Details"
                        android:textColor="@color/colorF"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:backgroundTint="@color/colorE"
                    app:cardElevation="5dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="CHANNEL"
                                android:textColor="@color/colorF"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/channel"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:text="CHANNEL"
                                android:textSize="10sp"
                                android:paddingLeft="5dp"
                                android:textColor="@color/colorF"
                                android:textStyle="bold" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="FREQ"
                                android:textSize="10sp"
                                android:textColor="@color/colorF"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/freq"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:text="FREQ"
                                android:textSize="10sp"
                                android:paddingLeft="5dp"
                                android:textColor="@color/colorF"
                                android:textStyle="bold" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="ODD / EVEN"
                                android:textColor="@color/colorF"
                                android:textSize="10sp"
                                android:paddingLeft="5dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/odd_even"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:text="ODD / EVEN"
                                android:textSize="10sp"
                                android:paddingLeft="5dp"
                                android:textColor="@color/colorF"
                                android:textStyle="bold" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="AVE. NPS."
                                android:textSize="10sp"
                                android:textColor="@color/colorF"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/ave_nps"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:text="AVE. NPS."
                                android:textSize="10sp"
                                android:paddingLeft="5dp"
                                android:textColor="@color/colorF"
                                android:textStyle="bold" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="C-TERM"
                                android:textSize="10sp"
                                android:textColor="@color/colorF"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/c_term"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:text="C-TERM"
                                android:textSize="10sp"
                                android:paddingLeft="5dp"
                                android:textColor="@color/colorF"
                                android:textStyle="bold" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="C-LIMIT"
                                android:textSize="10sp"
                                android:textColor="@color/colorF"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/c_limit"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:text="C-LIMIT"
                                android:textSize="10sp"
                                android:paddingLeft="5dp"
                                android:textColor="@color/colorF"
                                android:textStyle="bold" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="P3"
                                android:textSize="10sp"
                                android:textColor="@color/colorF"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/p3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:text="0"
                                android:textSize="10sp"
                                android:paddingLeft="5dp"
                                android:textColor="@color/colorF"
                                android:textStyle="bold" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="P6"
                                android:textSize="10sp"
                                android:textColor="@color/colorF"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/p6"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:text="0"
                                android:textSize="10sp"
                                android:paddingLeft="5dp"
                                android:textColor="@color/colorF"
                                android:textStyle="bold" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="P9"
                                android:textSize="10sp"
                                android:textColor="@color/colorF"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/p9"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:text="0"
                                android:textSize="10sp"
                                android:paddingLeft="5dp"
                                android:textColor="@color/colorF"
                                android:textStyle="bold" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="P12"
                                android:textSize="10sp"
                                android:textColor="@color/colorF"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/p12"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:text="0"
                                android:textSize="10sp"
                                android:paddingLeft="5dp"
                                android:textColor="@color/colorF"
                                android:textStyle="bold" />

                        </TableRow>

                    </TableLayout>
                </androidx.cardview.widget.CardView>

                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="300dp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>